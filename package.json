{
  "name": "popx-mern",
  "version": "1.0.0",
  "scripts": {
    "start": "node server/src/index.js",
    "server": "cross-env NODE_ENV=development nodemon server/src/index.js",
    "client": "npm run dev --prefix client",
    "build": "cd client && npm install && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "cross-env": "^10.0.0"
  }
}